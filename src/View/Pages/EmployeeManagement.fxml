<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.EmployeeManagementController">
    <top>
        <HBox minHeight="80.0" minWidth="1200.0" prefHeight="0.0" style="-fx-background-color: lightgray;" BorderPane.alignment="CENTER">
            <children>
                <Label text="MotorPH HR System">
                    <HBox.margin>
                        <Insets left="25.0" top="25.0" />
                    </HBox.margin>
                    <font>
                        <Font name="Segoe UI Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </top>
    <left>
        <VBox alignment="CENTER" fillWidth="false" minHeight="670.0" minWidth="200.0" prefHeight="0.0" prefWidth="0.0" spacing="20.0" style="-fx-background-color: Gray;">
         <children>
                  <Button minHeight="30.0" minWidth="150.0" mnemonicParsing="false" onAction="#handleAddNewRecord" text="Add">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
                  <Button minHeight="30.0" minWidth="150.0" mnemonicParsing="false" onAction="#handleUpdateRecord" text="Update">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
                  <Button minHeight="30.0" minWidth="150.0" mnemonicParsing="false" onAction="#handleDeleteRecord" style="-fx-background-color: red;" text="Delete" textFill="WHITE">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button layoutX="10.0" layoutY="132.0" minHeight="30.0" minWidth="150.0" mnemonicParsing="false" onAction="#handleComputePayroll" text="Compute">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button layoutX="35.0" layoutY="445.0" minHeight="30.0" minWidth="150.0" mnemonicParsing="false" onAction="#handleLogout" text="Logout">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin></VBox>
    </left>
    <center>
          <TableView fx:id="employeeTable" prefHeight="625.0" prefWidth="900.0">
              <columns>
                  <TableColumn fx:id="employeeIdColumn" minWidth="137.0" text="Employee #" />
                  <TableColumn fx:id="lastNameColumn" minWidth="137.0" text="Last Name" />
                  <TableColumn fx:id="firstNameColumn" minWidth="137.0" text="First Name" />
                  <TableColumn fx:id="tinNoColumn" minWidth="137.0" text="Tin #" />
                  <TableColumn fx:id="sssNoColumn" minWidth="137.0" text="SSS #" />
                  <TableColumn fx:id="philhealthNoColumn" minWidth="137.0" text="Philhealth #" />
                  <TableColumn fx:id="pagibigNoColumn" minWidth="137.0" text="Pagibig #" />
              </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
          </TableView>
    </center>
</BorderPane>
